<%- include("header.ejs") %>

<body>
    <%- include("navbar.ejs") %>
  
    <div class="d-flex justify-content-center ">

        <form class="col-sm-6" action="/product_update" method="post">
            <h1>Update  Product</h1>
            <div class="form-group">
                <label for="name">Product name</label>
                <input type="text" class="form-control" id="name" name="name"  value="<%=product[0].name%>" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="description">Product description</label>
                <input type ="text" class="form-control" id="description" name="description"  value="<%=product[0].description%>"
                    placeholder="Enter product description"></textarea>
            </div>
            <div class="form-group">
                <label for="group">Product group</label>
                <select class="form-control" id="group_id" name="group_id" value="<%=product[0].group_id%>" >
                    <% for(let i = 0; i<groups.length; i++){ %>
                    <option value=<%= groups[i].id %>> <%= groups[i].g_name %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="measuring unit">Measuring unit</label>
                <select class="form-control" id="measuring_unit" name="measuring_unit" value="<%=product[0].measuring_unit%>" >
                    <option>pieces</option>
                    <option>kg</option>
                    <option>gm</option>
                    <option>ltr</option>
                    <option>Ml</option>
                </select>
            </div>
            <div class="form-row">
                <div class="col">
                    <label>Cost price in Rs</label>
                    <input type="text" class="form-control" placeholder="Enter cost price" name="cost_price">
                </div>
                <div class="col">
                    <label>Selling price in Rs</label>
                    <input type="text" class="form-control" placeholder="Enter cost price" name="selling_price">
                </div>
                <div class="col">
                    <label>MRP</label>
                    <input type="text" class="form-control" placeholder="Enter cost price" name="mrp">
                </div>
                <div class="col">
                    <label>Discount</label>
                    <input type="text" class="form-control" placeholder="Enter cost price" name="discount">
                </div>
                <input type="hidden" name="id" value="<%=product[0].id%>"/>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>

<%- include("footer.ejs") %>