
<%- include("header.ejs") %>

<body class="mt 32">
  <%- include("navbar.ejs")%>
  <% if (update == true) { %>
    <div class="alert alert-success">
        <strong>Success!</strong> Product update successfully!
    </div>
    <% } else if (update == false) { %>
    <div class="alert alert-danger">
        <strong>Failure!</strong> Could not update product!
    </div>
    <% } %>
  <% if (del == true) { %>
    <div class="alert alert-success">
        <strong>Success!</strong> Product Deleted  successfully!
    </div>
    <% } else if (del == false) { %>
    <div class="alert alert-danger">
        <strong>Failure!</strong> Could not  Delete this  Profile!
    </div>
    <% } %>
<div style="margin-top: 30px;" >

    <div class="container">
        <h3>
            <span>Suppliers Profiles</span>
            <input type="search" placeholder="Search..." class="form-control search-input" data-table="customers-list"/>
        </h3>
        <div style="margin-left: 1000px; margin-top: 10px;">
        <a class="btn btn-dark" href="insert_supplier" role="button">Add Supplier</a>
    </div>
        <table class="table table-striped mt32 customers-list">
            <thead>
                <tr>
                    <th>Supplier ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone No</th>
                    <th>Account no</th>
                  
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <%  for(let i = 0; i<suppliers.length; i++){
                %>
                <tr>
                    <td><%=suppliers[i].id%></td>
                    <td><%=suppliers[i].name%></td>
                    <td><%=suppliers[i].address%></td>
                    <td><%=suppliers[i].phone_no%></td>
                    <td><%=suppliers[i].account_no%></td>
                
                    <td><a class="btn btn-info" href="<%="update_supplier?id="+suppliers[i].id%>" role="button">Update</a></td>
                    <td><a class="btn btn-danger"href='<%="del_supplier?id="+suppliers[i].id%>' role="button">
                        <input type="hidden" value="<%=suppliers[i].id%>"/>
                        Delete</a></td>
                </tr>
                
              <%}%>

            </tbody>
        </table>
    </div>
  
    </div>
    <div>
            <script src="trans_view.js">
       
    </script>
    
        </div>
    
</body>

<%- include("footer.ejs") %>