<%- include("header.ejs") %>

<body>
  <%- include("navbar.ejs") %>
  <% if (inserted == true) { %>
    <div class="alert alert-success">
        <strong>Success!</strong> New Creditor Profile created  successfully!
    </div>
    <% } else if (inserted == false) { %>
    <div class="alert alert-success">
        <strong>Failure!</strong> Could not insert new Creditor Profile!
    </div>
    <% } %>

  <div class="d-flex justify-content-center">
    <form class="col-sm-6" action="/insert_retailer" method="post">
      <h1>Add Retailer</h1>
      <div class="form-group">
        <label for="name">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Enter Username "
        />
      </div>
      <div class="form-group">
        <label for="description">Password </label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Enter Password "
        />
      </div>
      <div class="form-group">
        <label for="group">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Enter Your name"
        />
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</body>

<%- include("footer.ejs") %>
