<%- include("header.ejs") %>
<%- include("navbar.ejs") %>

<body>
    <div class="d-flex justify-content-center ">
        <div>

            <h3 id="title">Update order status</h3>
            <div class="form-row">
                <div class="col">
                    <input class="form-control" type="text" id="search_bar" placeholder="Type to search in products">
                </div>
                <div class="col">
                    <button class="btn btn-primary" id="submit">Proceed to checkout</button>
                </div>
            </div>

            <br />
            <div id="tableview">
                <table class="table table-hover" id="order_table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Supplier Id</th>
                            <th scope="col">Supplier Name</th>
                            <th scope="col">Date</th>
                            <th scope="col">Status</th>
                            <th scope="col">Payable</th>
                            <th scope="col">Paid</th>
                            <th>update</th>>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < order_details.length; i++ ) { %>
                        <tr id=<%= order_details[i].id %>>
                            <th scope="row"><%= order_details[i].id %> </th>
                            <td><%= order_details[i].supplier_id %></td>
                            <td><%= order_details[i].name %></td>
                            <td><%= order_details[i].date %></td>
                            <td>
                                <div class="form-group">
                                    <label for="sel1">Order Status</label>
                                    <% if (order_details[i].status == 1) { %>
                                    <select class="form-control" id="status" disabled>
                                        <option value="1" selected>Received</option>
                                        <option value="0">Not received</option>
                                    </select>
                                    <% } else{%>
                                    <select class="form-control" id="status">
                                        <option value="1">Received</option>
                                        <option value="0" selected>Not Received</option>
                                    </select>
                                    <%  }  %>
                                </div>

                            </td>
                            <td><%= order_details[i].total_payable %></td>
                            <td><input class="paid" type="text" value=<%= order_details[i].paid %>></td>
                            <td><button class="btn btn-primary update-button">update</button></td>
                        </tr>
                        <% } %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="/order_status.js"></script>
</body>
<%- include("footer.ejs") %>