<%- include("header.ejs") %>

<body>
  <%- include("navbar.ejs") %>
  
  <div class="d-flex justify-content-center">
    <form class="col-sm-6" action="/supplier_update" method="POST">
      <h1>Update Supplier </h1>
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          value="<%=suppliers[0].name%>"
          placeholder="Enter Creditor name"
        />
      </div>
      <div class="form-group">
        <label for="description">Address </label>
        <input type="text"
          class="form-control"
          id="address"
          name="address"
         
          value="<%=suppliers[0].address%>"
          placeholder="Enter Creditor Address"
        />
      </div>
      <div class="form-group">
        <label for="group">Phone number</label>
        <input
          type="number"
          class="form-control"
          id="phone_no"
          name="phone_no"
          value="<%=suppliers[0].phone_no%>"
          placeholder="Enter Phone number"
          maxlength="12"
        />
      </div>
      <div class="form-group">
        <label for="measuring unit">Account no </label>
        <input
          type="number"
          class="form-control"
          id="account_no"
          name="account_no"
          value="<%=suppliers[0].account_no%>"
          placeholder="Enter Account no "
          maxlength="12"
        />
      </div>
        <input type="hidden" name="id" value="<%=suppliers[0].id%>"/>
      
      <button style="margin-left: 30px;" type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
  </div>
</body>

<%- include("footer.ejs") %>
