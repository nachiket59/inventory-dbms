<%- include("header.ejs") %>

<body>
  <%- include("navbar.ejs") %>

  <div class="d-flex justify-content-center">
    <form class="col-sm-6" action="/insert_supplier" method="post">
      <h1>Add Supplier</h1>
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Enter Supplier name"
        />
      </div>
      <div class="form-group">
        <label for="description">Address </label>
        <textarea
          class="form-control"
          id="address"
          name="address"
          placeholder="Enter Supplier Address"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="group">Phone number</label>
        <input
          type="number"
          class="form-control"
          id="phone_no"
          name="phone_no"
          placeholder="Enter Phone number"
          maxlength="12"
        />
      </div>
      <div class="form-group">
        <label for="measuring unit">Account number</label>
        <input
          type="number"
          class="form-control"
          id="account_no"
          name="account_no"
          placeholder="Enter Account  number"
          maxlength="12"
        />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</body>

<%- include("footer.ejs") %>
